# -----------------------------------------------------------------
# CONFIGURACIÓN GENERAL
# -----------------------------------------------------------------
NODE_ENV=production
VITE_APP_NAME=Eclothe
VITE_APP_URL=https://eclothe.com
VITE_API_BASE_URL=https://api.eclothe.com/v1

# -----------------------------------------------------------------
# BASE DE DATOS
# -----------------------------------------------------------------
DATABASE_URL=postgresql://usuario:password@localhost:5432/eclothe_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eclothe_db
DB_USER=tu_usuario
DB_PASSWORD=tu_password_super_secreto

# -----------------------------------------------------------------
# AUTENTICACIÓN Y SEGURIDAD
# -----------------------------------------------------------------
JWT_SECRET=tu_jwt_secret_muy_largo_y_complejo_aqui
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_aqui

# -----------------------------------------------------------------
# PAGOS (STRIPE)
# -----------------------------------------------------------------
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_51xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------
# PAGOS ALTERNATIVOS
# -----------------------------------------------------------------
# PayPal
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
VITE_PAYPAL_CLIENT_ID=tu_paypal_client_id

# Mercado Pago (para México)
MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_token
MERCADOPAGO_PUBLIC_KEY=tu_mercadopago_public_key
VITE_MERCADOPAGO_PUBLIC_KEY=tu_mercadopago_public_key

# -----------------------------------------------------------------
# EMAIL Y NOTIFICACIONES
# -----------------------------------------------------------------
# SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_de_gmail
FROM_EMAIL=noreply@eclothe.com
FROM_NAME=Eclothe

# SendGrid (alternativa)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------
# ALMACENAMIENTO DE ARCHIVOS
# -----------------------------------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eclothe-images

# Cloudinary (alternativa popular)
CLOUDINARY_CLOUD_NAME=tu_cloudinary_name
CLOUDINARY_API_KEY=tu_cloudinary_api_key
CLOUDINARY_API_SECRET=tu_cloudinary_api_secret
VITE_CLOUDINARY_CLOUD_NAME=tu_cloudinary_name

# -----------------------------------------------------------------
# ANALYTICS Y TRACKING
# -----------------------------------------------------------------
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=1234567890123456
VITE_HOTJAR_ID=1234567

# -----------------------------------------------------------------
# MAPAS Y GEOLOCALIZACIÓN
# -----------------------------------------------------------------
VITE_GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_MAPBOX_TOKEN=pk.eyJ1IjoidHVfdXNlciIsImEiOiJjbGxxxxxx

# -----------------------------------------------------------------
# REDES SOCIALES (para login social)
# -----------------------------------------------------------------
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret

FACEBOOK_APP_ID=1234567890123456
FACEBOOK_APP_SECRET=tu_facebook_app_secret

# -----------------------------------------------------------------
# APIs EXTERNAS
# -----------------------------------------------------------------
# API de envíos (ejemplo: Envía Fácil, DHL, etc.)
SHIPPING_API_KEY=tu_shipping_api_key
SHIPPING_API_URL=https://api.enviafacil.com

# API de inventario
INVENTORY_API_KEY=tu_inventory_api_key

# -----------------------------------------------------------------
# DESARROLLO Y DEBUG
# -----------------------------------------------------------------
DEBUG=false
LOG_LEVEL=info
VITE_DEBUG_MODE=false

# -----------------------------------------------------------------
# REDIS (para caché y sesiones)
# -----------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_redis_password

# -----------------------------------------------------------------
# WEBHOOKS
# -----------------------------------------------------------------
WEBHOOK_SECRET=tu_webhook_secret_para_validar_llamadas

# -----------------------------------------------------------------
# CONFIGURACIÓN DE TIENDA
# -----------------------------------------------------------------
VITE_CURRENCY=MXN
VITE_CURRENCY_SYMBOL=$
VITE_TAX_RATE=0.16
VITE_FREE_SHIPPING_THRESHOLD=1000

# -----------------------------------------------------------------
# MODO MANTENIMIENTO
# -----------------------------------------------------------------
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=Estamos mejorando tu experiencia. Volvemos pronto.

# -----------------------------------------------------------------
# LÍMITES Y CONFIGURACIONES
# -----------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------
# CERTIFICADOS SSL (si usas HTTPS personalizado)
# -----------------------------------------------------------------
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem